<h1>Here are your tasks for today!</h1>

<ul>
  <% @tasks.each do |task|%>
    <li><% if task.completed? %>
          <i class="fa-regular fa-square-check"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>


<%= link_to "Add a new task", new_task_path %>
